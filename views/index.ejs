<%- include('header'); -%>

    <!-- header -->
    <header>
        <div class="container banner-bg">
            <div class="row">
                <div class="col-md"></div>
                <div class="col-md-4">
                    <h5 class="phrase phrase1">SPECS</h5>
                    <h5 class="phrase">REDEFINED</h5>
                    <p class="toptext"> Melbourne's best eyewear accessory
                        fashion brand.</p>
                   <a id="btnshopnow" href="#bestsellerscarousel">Shop Now</a>
                </div>
                <div class="col-md-4 text-center align-self-center">

                    <div class="videorow1 d-inline-flex gap-2">
                        <div class="video-mask">
                            <video width="135" height="auto" autoplay muted loop id="video1">
                                <source src="images/video.mp4" type="video/mp4">
                            </video>
                        </div>
                        <div class="video-mask">
                            <video width="135" height="auto" autoplay muted loop id="video2">
                                <source src="images/video7.mp4" type="video/mp4">
                            </video>
                        </div>
                    </div>

                    <div class="videorow2 d-inline-flex gap-2">
                        <div class="video-mask">
                            <video width="135" height="auto" autoplay muted loop id="video1">
                                <source src="images/video3.mp4" type="video/mp4">
                            </video>
                        </div>
                        <div class="video-mask">
                            <video width="135" height="auto" autoplay muted loop id="video2">
                                <source src="images/video4.mp4" type="video/mp4">
                            </video>
                        </div>
                    </div>
                    
                    <div class="videorow3 d-inline-flex gap-2">
                        <div class="video-mask">
                            <video width="135" height="auto" autoplay muted loop id="video1">
                                <source src="images/video5.mp4" type="video/mp4">
                            </video>
                        </div>
                        <div class="video-mask">
                            <video width="135" height="auto" autoplay muted loop id="video2">
                                <source src="images/video6.mp4" type="video/mp4">
                            </video>
                        </div>
                    </div>
                    
                </div>
                
                <div class="col-md"></div>
                
            </div>  
        </div>
    </header>
    <!-- end header -->
    <!-- main body -->
    <main>
        <!-- main carousel -->
        <div class="container w-50 p-3">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="images\dumplingcases.png" class="carouselmainimg d-block w-100"
                            alt="3softcaseswithdumplinglogo">
                        <div class="carousel-caption d-none d-lg-block">
                            <a href="/product" class="btn btn-sm btncarouselmain" role="button"><img
                                    class="img-fluid" src="images\shopcasesbutton.png" alt="shopcasesbutton"></a>
                            <p class="carouselmaindescription">Premium quality soft and hard spectacle cases.
                            </p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images\chains.png" class="carouselmainimg d-block w-100" alt="3glasseschains">
                        <div class="carousel-caption d-none d-lg-block">
                            <a class="btn btn-sm btncarouselmain" href="/product"><img class="img-fluid"
                                    src="images\shopchainsbutton.png" alt="shopchainsbutton"></a>
                            <p class="carouselmaindescription">Our chains are strong, durable and fashionable!</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images\spraybottles.jpg" class="carouselmainimg d-block w-100" alt="spraybottle">
                        <div class="carousel-caption d-none d-lg-block">
                            <a class="btn btn-sm btncarouselmain" href="/product"><img class="img-fluid"
                                    src="images\shopspraysbutton.png" alt="shopspraysbutton"></a>
                            <p class="carouselmaindescription">Our very own branded microfibre cloths and spray bottles.
                            </p>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <!-- end carousel -->

        <!-- Best sellers navigation -->
        <div id="bestsellersnavbar" class="container d-flex justify-content-center">
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#bestsellersnavbar">Best Sellers</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent2" aria-controls="navbarSupportedContent2"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent2">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a href="#cases" class="nav-link" onclick="slideTo('cases')">Cases</a>
                            </li>
                            <li class="nav-item">
                                <a href="#chain" class="nav-link" onclick="slideTo('chain')">Chains and Cords</a>
                            </li>
                            <li class="nav-item">
                                <a href="#cloth" class="nav-link" onclick="slideTo('cloth')">Cloths and Lens
                                    cleaners</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Best sellers navigation end -->

        <div id="bestsellerscarousel" class="container text-center fixed">
            <div id="carouselExampleControls" class="carousel slide carousel-fade">
                <div class="carousel-inner">
                    <div class="carousel-item active" id="cases">
                        <!-- best selling cases slide -->
                        <div class="card card-body border-0">
                            <div class="row row-cols-1 row-cols-md-2 g-4">

                                <% rows.forEach(function(row) { %>
                                    <% if (row.producttype=="case" ) { %>
                                        <div class="col">
                                            <div class="card border-0">
                                                <img src="images/<%= row.productimage %>" class="card-img-top"
                                                    alt="case">
                                                <div class="card-body text-center">
                                                    <h5 class="card-title best-selling-cases">
                                                        <%= row.productname %>
                                                    </h5>
                                                    <p class="card-text best-selling-price">$<%= row.productprice %>
                                                    </p>
                                                    <button class="bestsellercartbutton">
                                                        <img src="images/cart.png" width="30" height="auto">
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% }); %>

                            </div>
                        </div>
                    </div>
                    <!-- best selling cases slide end -->
                    <div class="carousel-item" id="chain">
                        <!-- best selling chains slide -->
                        <div id="bestsellingchainsandcords" class="card card-body border-0">
                            <div class="row row-cols-1 row-cols-md-2 g-4">
                                <% rows.forEach(function(row) { %>
                                    <% if (row.producttype=="cord" ) { %>
                                        <div class="col">
                                            <div class="card border-0">
                                                <img src="images/<%= row.productimage %>" class="card-img-top"
                                                    alt="case">
                                                <div class="card-body text-center">
                                                    <h5 class="card-title best-selling-cases">
                                                        <%= row.productname %>
                                                    </h5>
                                                    <p class="card-text best-selling-price">
                                                        $<%= row.productprice %>
                                                    </p>
                                                    <button class="bestsellercartbutton" onclick="addToCart(this.value)"
                                                        value="0">
                                                        <img src="images/cart.png" width="30" height="auto">
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% }); %>
                            </div>
                        </div>
                        <!-- best selling chains slide end-->
                    </div>
                    <div class="carousel-item" id="cloth">
                        <!-- best selling cloth slide -->
                        <div id="bestsellingClothsandlenscleaners" class="card card-body border-0">
                            <div class="row row-cols-1 row-cols-md-2 g-4">
                                <% rows.forEach(function(row) { %>
                                    <% if (row.producttype=="cloth" ) { %>
                                        <div class="col">
                                            <div class="card border-0">
                                                <img src="images/<%= row.productimage %>" class="card-img-top"
                                                    alt="case">
                                                <div class="card-body text-center">
                                                    <h5 class="card-title best-selling-cases">
                                                        <%= row.productname %>
                                                    </h5>
                                                    <p class="card-text best-selling-price">
                                                        $<%= row.productprice %>
                                                    </p>
                                                    <button class="bestsellercartbutton" onclick="addToCart(this.value)"
                                                        value="0">
                                                        <img src="images/cart.png" width="30" height="auto">
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% }); %>
                            </div>
                        </div>
                        <!-- best selling cloth slide end-->
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

    </main>

    <%- include('footer'); -%>